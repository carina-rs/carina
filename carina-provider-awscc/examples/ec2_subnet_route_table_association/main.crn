# EC2 Subnet Route Table Association Example
#
# Creates a VPC, a subnet, a route table, and associates the subnet
# with the route table.

provider awscc {
  region = awscc.Region.ap_northeast_1
}

let vpc = awscc.ec2_vpc {
  cidr_block           = "10.0.0.0/16"
  enable_dns_support   = true
  enable_dns_hostnames = true
}

let subnet = awscc.ec2_subnet {
  vpc_id            = vpc.vpc_id
  cidr_block        = "10.0.1.0/24"
  availability_zone = "ap-northeast-1a"
}

let rt = awscc.ec2_route_table {
  vpc_id = vpc.vpc_id
}

let rt_assoc = awscc.ec2_subnet_route_table_association {
  subnet_id      = subnet.subnet_id
  route_table_id = rt.route_table_id
}
