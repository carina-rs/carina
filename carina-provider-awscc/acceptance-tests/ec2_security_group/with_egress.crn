# EC2 Security Group - Egress rules test
#
# Tests: security_group_egress (List<Struct>) with IPv4 cidr_ip

provider awscc {
  region = aws.Region.ap_northeast_1
}

let vpc = awscc.ec2_vpc {
  name       = "acceptance-test-vpc-sg-egress"
  cidr_block = "10.0.0.0/16"
}

awscc.ec2_security_group {
  name              = "acceptance-test-sg-egress"
  vpc_id            = vpc.vpc_id
  group_description = "Acceptance test - egress rules"

  security_group_egress {
    ip_protocol = "tcp"
    from_port   = 443
    to_port     = 443
    cidr_ip     = "0.0.0.0/0"
    description = "Allow HTTPS outbound"
  }

  security_group_egress {
    ip_protocol = "-1"
    cidr_ip     = "10.0.0.0/8"
    description = "Allow all to private ranges"
  }

  tags = {
    Environment = "acceptance-test"
  }
}
